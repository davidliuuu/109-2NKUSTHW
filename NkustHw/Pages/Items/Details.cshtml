@page
@model RazorPages.Pages.Items.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>產品資訊</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            品名
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Iteminfo.Title)
        </dd>
        <dt class="col-sm-2">
            更新日期
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Iteminfo.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            商品類型
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Iteminfo.Genre)
        </dd>
        <dt class="col-sm-2">
            價格
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Iteminfo.Price)
        </dd>
        <dt class="col-sm-2">
            數量
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Iteminfo.Count)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Iteminfo.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
